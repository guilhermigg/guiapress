
<%- include ('../../partials/header.ejs') %>   <!--  .. 2 pontos volta um níve. Mais 2 pontos volta mais outro nível-->

<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3>Novo Artigo</h3>
        </div>
        <div class="card-body"> 
            <div class="card-body">   
                    <form method="POST" action="/articles/save">
                        <input class="form-control" type="text" name="title" placeholder="título do artigo..."><br>
                        <textarea class="form-control" placeholder="artigo..." name="body" id="article"></textarea><br>
                        <select name="category" class="form-control">
                            <% categories.forEach((category) => { %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                                <% }) %>
                        </select><br>
                        <button class="btn btn-success">Cadastro</button>
                    </form>
                </div>     
            </div>
        </div>     
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: [
        'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>


